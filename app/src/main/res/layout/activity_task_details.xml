<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Name: Job Name"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/job_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Location: Building 002"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_below="@id/job_name"
                />
            <TextView
                android:id="@+id/task_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task ID: 234"
                android:layout_below="@id/job_location"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <include
                android:id="@+id/task_details"
                layout="@layout/task_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/task_id"
                android:layout_marginTop="31dp" />
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>