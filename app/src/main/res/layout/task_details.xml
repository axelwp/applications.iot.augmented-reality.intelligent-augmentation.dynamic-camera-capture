<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1">
    <!--second textview element in table row is the one with the id where data is rendered into-->
    <TableRow>
        <TextView
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Member"
            android:layout_weight=".50"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
        <TextView
            android:id="@+id/scan_member"
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Column 02C10"
            android:textColor="@color/black"
            android:layout_weight=".50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Piece Mark"
            android:layout_weight=".50"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
        <TextView
            android:id="@+id/piece_mark"
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="02wt1000"
            android:textColor="@color/black"
            android:layout_weight=".50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Location"
            android:layout_weight=".50"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="South Face"
            android:textColor="@color/black"
            android:layout_weight=".50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Elevation"
            android:layout_weight=".50"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
        <TextView
            android:id="@+id/elevation"
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="El.25'-5''"
            android:textColor="@color/black"
            android:layout_weight=".50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Weld Type"
            android:layout_weight=".50"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
        <TextView
            android:id="@+id/weld_type"
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Fillet"
            android:textColor="@color/black"
            android:layout_weight=".50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Weld Size"
            android:layout_weight=".50"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
        <TextView
            android:id="@+id/weld_size"
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="5/8 ''"
            android:textColor="@color/black"
            android:layout_weight=".50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Weld Length"
            android:layout_weight=".50"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
        <TextView
            android:id="@+id/weld_length"
            android:layout_width="0dip"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="2'-5''"
            android:textColor="@color/black"
            android:layout_weight=".50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border_line"/>
    </TableRow>
    <TableRow
        android:gravity="center"
        android:layout_marginTop="20sp">
        <FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/task_details_scan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    android:paddingLeft="25sp"
                    android:paddingRight="25sp"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:textSize="24sp"
                    android:backgroundTint="#2980B9"
                    android:textAlignment="center"
                    />

            </LinearLayout>
        </FrameLayout>
    </TableRow>


</TableLayout>